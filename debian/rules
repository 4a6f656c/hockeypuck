#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_install:
	dh_install gopath/src/launchpad.net/hockeypuck/cmd/hockeypuck-mgo/hockeypuck-mgo /usr/bin/
	dh_install gopath/src/launchpad.net/hockeypuck/cmd/hockeypuck-pq/hockeypuck-pq /usr/bin/
	dh_install gopath/src/launchpad.net/hockeypuck/cmd/hockeypuck-load/hockeypuck-load /usr/bin/
	dh_install etc/init/hockeypuck-mgo.conf /etc/init
	dh_install www /var/lib/hockeypuck
	dh_install man/man1/hockeypuck-mgo.1 /usr/share/man/man1

%:
	dh $@ 
